    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Save your Bookmark</h4>
                    <button type="button" id="mdlCloseBtn" class="close" data-dismiss="modal">&times;</button>

                </div>
                <div class="modal-body">
                    <input type="text" id="bmName" placeholder="Bookmark's Name" value="" style="width:100%" />
                    <div id="errorMsg" style="color:red;font-size:small">Please enter Bookmark's Name</div>
                    <input type="checkbox" checked="checked" id="defaultCheckbox" name="defaultCheckbox" />
                    <label for="defaultCheckbox" style="font-size:small"> Default bookmark</label><br />
                </div>
                <div class="modal-footer">
                    <button type="button" id="mdlSaveBtn" onclick="saveBM()" class="btn btn-success">Save</button>
                    <button type="button" id="mdlCancelBtn" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>

        </div>
    </div>
    <div class="modal fade" id="myUSModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="float:left;">

                @*for the sections where table are present*@
            <section id="tab-1" class="tab-body entry-content active active-content">
                @*<div style="float:left;">*@
                @*<div>*@

                <div id="INVImport" style="width:37%;margin-top:5px;width:100%;">

                    @using (Ajax.BeginForm("Index_import", "WWHWInventory", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "INVImport", OnSuccess = "mySuccessFuntion(rdata)", OnFailure = "myFailureFuntion()" }, new { enctype = "multipart/form-data", id = "frmUploader" }))
                    {


                        <table style="margin-left:5px;" width="100%">
                            <tr>
                                <td style="width: 10%;">
                                    <b>Import HW Details : </b>
                                </td>
                                <td style="width: 20%;">
                                    <div class="custom-file" style="width:100%">
                                        <input type="file" class="custom-file-input" id="postedFile" name="postedFile" accept=".xlsx" />
                                        <label class="custom-file-label" for="customFile">Choose file</label>
                                    </div>
                                </td>
                                <td>
                                    <input type="submit" title="Upload" value="Upload" class="btn btn-outline-dark" onclick="spinnerEnable()" />
                                    <i id="UploadSpinner"></i>
                                </td>

                                <td style="float:right;">
                                    <div>
                                        <i class="fa fa-gear" id="userSettingIcon" style="font-size: 28px; cursor: pointer; color: #4080ad" title="User Settings"></i>

                                        <i class="fa fa-star-o" id="bookmarkStar" style="font-size: 28px; cursor: pointer; color: #97bed9; padding-left: 10px; visibility: hidden;" title="Bookmark this view (F2)"></i>
